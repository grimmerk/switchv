{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Electron: Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge-vscode-win",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge-vscode-win.cmd"
            },
            "args" : [
                ".",
                "--remote-debugging-port=9223"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "preLaunchTask": "npm: start",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Electron: Renderer Process",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000,
            "urlFilter": "*main_window*",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
                "webpack:///./*": "${workspaceFolder}/*",
                "webpack:///*": "*"
            }
        },
        {
            "name": "Electron: Explainer Renderer Process",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000,
            "urlFilter": "*explainer_window*",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
                "webpack:///./*": "${workspaceFolder}/*",
                "webpack:///*": "*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Electron: All Processes",
            "configurations": [
                "Electron: Main Process", 
                "Electron: Renderer Process",
                "Electron: Explainer Renderer Process"
            ],
            "stopAll": true
        }
    ]
}