{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron: Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "yarn",
            "windows": {
                "runtimeExecutable": "yarn.cmd"
            },
            "runtimeArgs": [
                "start"
            ],
            "outputCapture": "std",
        },
        {
            "name": "Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: ms-Main-blank-only-used-in-comound",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                ".",
                "--remote-debugging-port=9223",
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            }
        },
        {
            "name": "Electron: ms-Renderer-only-used-in-comound",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000
        }
    ],
    "compounds": [
        {
            "name": "Electron: All(require manually run start first)",
            "configurations": [
                "Electron: ms-Main-blank-only-used-in-comound",
                "Electron: ms-Renderer-only-used-in-comound"
            ]
        }
    ]
}